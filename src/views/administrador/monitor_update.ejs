<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Datos del Monitor</title>
    <link rel="stylesheet" href="/public/css/estilos_estudiante_update.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div class="container">
    <h2>Editar Datos del Monitor</h2>
    <div id="alert" class="alert"></div>
    <form action="/updateMonitor/<%= data.codigo_monitor %>" method="post">
      <% if (data) { %>
        <% for(var i=0; i < data.length; i++) { %> 
        <div class="horizontal-group">
            <div class="form-group">
                <label for="codigo_monitor">Código del monitor</label>
                <input type="text" id="codigo_monitor" name="codigo_monitor" maxlength="13" value="<%= data[i].codigo_monitor %>">
            </div>
            <div class="form-group">
                <label for="password_monitor">Contraseña</label>
                <input type="text" id="password_monitor" name="password_monitor" maxlength="50" value="<%= data[i].password_monitor %>">
            </div>
        </div>
        <div class="horizontal-group">
            <div class="form-group">
                <label for="nombre_monitor">Nombre del monitor</label>
                <input type="text" id="nombre_monitor" name="nombre_monitor" maxlength="50" value="<%= data[i].nombre_monitor %>">
            </div>
            <div class="form-group">
                <label for="apellido_monitor">Apellido del monitor</label>
                <input type="text" id="apellido_monitor" name="apellido_monitor" maxlength="50" value="<%= data[i].apellido_monitor %>">
            </div>
        </div>
        <div class="horizontal-group">
            <div class="form-group">
                <label for="cedula_monitor">Cedula</label>
                <input type="text" id="cedula_monitor" name="cedula_monitor" value="<%= data[i].cedula_monitor %>">
            </div>
            <div class="form-group">
                <label for="numero_monitor">Numero</label>
                <input type="text" id="numero_monitor" name="numero_monitor" value="<%= data[i].numero_monitor %>">
            </div>
        </div>
        <div class="form-group">
            <label for="email_monitor">Correo</label>
            <input type="email" id="email_monitor" name="email_monitor" maxlength="50" value="<%= data[i].email_monitor %>">
        </div>
        <div class="horizontal-group">
            <div class="form-group">
                <label for="sede_monitor">Sede</label>
                <select name="sede_monitor" class="input-select" required>
                    <option value="<%= data[i].sede_monitor %>"><%= data[i].sede_monitor %></option>
                    <option value="Cali">Cali</option>
                    <option value="Pacifico">Pacifico</option>
                    <option value="Palmira">Palmira</option>
                    <option value="Zarzal">Zarzal</option>
                    <option value="Caicedonia">Caicedonia</option>
                    <option value="Buga">Buga</option>
                    <option value="Cartago">Cartago</option>
                    <option value="Tulua">Tulua</option>
                    <option value="Norte del Cauca">Norte del Cauca</option>
                    <option value="Yumbo">Yumbo</option>
                  </select>
            </div>
            <div class="form-group">
                <label for="semestre_monitor">Semestre</label>
                <select name="semestre_monitor" class="input-select" required>
                    <option value="data[i].semestre_monitor"><%= 
                        data[i].semestre_monitor === 'Primero' ? 'Primero' :
                        data[i].semestre_monitor === 'Segundo' ? 'Segundo' :
                        data[i].semestre_monitor === 'Tercero' ? 'Tercero' :
                        data[i].semestre_monitor === 'Cuarto' ? 'Cuarto' :
                        data[i].semestre_monitor === 'Quinto' ? 'Quinto' :
                        data[i].semestre_monitor === 'Sexto' ? 'Sexto' :
                        data[i].semestre_monitor === 'Septimo' ? 'Septimo' :
                        data[i].semestre_monitor === 'Octavo' ? 'Octavo' :
                        data[i].semestre_monitor === 'Noveno' ? 'Noveno' :
                        data[i].semestre_monitor === 'Decimo' ? 'Decimo' :
                        data[i].semestre_monitor === 'Decimo Primero' ? 'Decimo Primero' :
                        data[i].semestre_monitor === 'Duodecimo' ? 'Duodecimo' :
                        data[i].semestre_monitor%></option>
                    <option value="Primero">Primero</option>
                    <option value="Segundo">Segundo</option>
                    <option value="Tercero">Tercero</option>
                    <option value="Cuarto">Cuarto</option>
                    <option value="Quinto">Quinto</option>
                    <option value="Sexto">Sexto</option>
                    <option value="Septimo">Septimo</option>
                    <option value="Octavo">Octavo</option>
                    <option value="Noveno">Noveno</option>
                    <option value="Decimo">Decimo</option>
                    <option value="Noveno">Noveno</option>
                    <option value="Duodecimo">Duodécimo</option>
                  </select>
            </div>
            <div class="form-group">
                <label for="carrera_monitor">Carrera</label>
                <select name="carrera_monitor" required>
                    <option value="data[i].carrera_monitor"><%= 
                        data[i].carrera_monitor === 'tecnologia_desarrollo_software' ? 'Tec. Desarrollo de Software' : 
                        data[i].carrera_monitor === 'ingenieria_sistemas' ? 'Ingeniería en Sistemas' : 
                        data[i].carrera_monitor === 'ingenieria_informatica' ? 'Ingeniería Informática' : 
                        data[i].carrera_monitor === 'ingenieria_industrial' ? 'Ingeniería Industrial' : 
                        data[i].carrera_monitor === 'ingenieria_electronica' ? 'Ingeniería Electrónica' : 
                        data[i].carrera_monitor%></option>
                    <option value="tecnologia_desarrollo_software">Tec. Desarrollo de Software</option>
                    <option value="ingieneria_sistemas">Ingeniería en Sistemas</option>
                    <option value="ingieneria_informatica">Ingeniería Informática</option>
                    <option value="ingieneria_industrial">Ingeniería Industrial</option>
                    <option value="ingieneria_electronica">Ingeniería Electrónica</option>
                    <option value="administracion_empresas">Administracion De Empresas</option>
                    <option value="comercio_exterior">Comercio Exterior</option>
                    <option value="tecnologia_alimentos">Tec. Alimentos</option>
                </select>
            </div>
        </div>
      <% }} %>
      <div class="boton_guardar">
        <button type="submit" id="button" class="button-save">Guardar Cambios</button>
      </div>
    </form>
    <div class="boton_volver">
      <a href="/admin"><button class="button-back">Volver</button></a>
    </div>
  </div>
  <% if (typeof alerta !=='undefined' ) { %>
    <% console.log(alerta) %>
    <script>
      Swal.fire({
        icon: "error",
        title: "Error",
        text: "<%= alerta %>",
      });
    </script>
  <% } %>
</body>
</html>
